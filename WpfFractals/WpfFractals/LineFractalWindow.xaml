<Window x:Name="window" x:Class="WpfFractals.LineFractalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LineFractalWindow" Height="600" Width="600">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Height="30">
            <Button x:Name="btnStart" Content="Draw Fractal" Click="BtnStart_Click" />
            <Label x:Name="lblProgress" Width="Auto" Content="Not Started" />
        </StackPanel>
        <Canvas x:Name="fractalCanvas" Width="590" Height="540" />
    </StackPanel>
</Window>
